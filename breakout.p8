__lua__
-- ball variables
bl_x = 1
bl_y = 40
bl_dx = 1
bl_dy = 1
bl_r = 2

function _init()

end

function _update()
	bl_x += bl_dx
	bl_y += bl_dy

	if (bl_x >= 127 or bl_x <= 0) then
		bl_dx *= -1
		sfx(0)
	end
	
	if (bl_y >= 127 or bl_y <= 0) then
		bl_dy *= -1
		sfx(0)
	end
end

function _draw()
	rectfill(0, 0, 127, 127, 1)
	circfill(bl_x, bl_y, bl_r, 8)
end
